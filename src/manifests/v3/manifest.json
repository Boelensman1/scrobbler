{
  "manifest_version": 3,
  "name": "Youtube Scrobbler",
  "version": "0.0.18",
  "permissions": ["tabs", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["../../content-script.ts"]
    }
  ],
  "icons": {
    "48": "../../icons/icon.png",
    "96": "../../icons/icon@2x.png",
    "144": "../../icons/icon@3x.png",
    "192": "../../icons/icon@4x.png"
  },
  "background": {
    "service_worker": "../../background-script.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "../../ui/popup/index.html"
  },
  "options_ui": {
    "page": "../../ui/index.html",
    "open_in_tab": true
  }
}
