{
  "manifest_version": 3,
  "name": "Sample Web Extension",
  "version": "0.0.1",
  "permissions": ["tabs", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["../../content-script.ts"]
    }
  ],
  "background": {
    "service_worker": "../../background-script.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "../../ui/popup/index.html"
  },
  "options_ui": {
    "page": "../../ui/index.html",
    "open_in_tab": true
  }
}
